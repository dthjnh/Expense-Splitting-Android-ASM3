<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/tvForgotPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="50dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvForgotPasswordSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPasswordTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Enter your email to receive a reset link"
        android:textSize="14sp"
        android:textColor="#808080" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/editEmailForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPasswordSubtitle"
        android:layout_marginTop="20dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSendResetLink"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/editEmailForgotPassword"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F9A825"
        app:cornerRadius="100dp"
        app:strokeColor="#FEBB1B"
        app:strokeWidth="1dp"
        android:text="Send Reset Link"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Back to Sign In -->
    <TextView
        android:id="@+id/tvBackToSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSendResetLink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Back to Sign In"
        android:textColor="#808080"
        android:textSize="14sp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>