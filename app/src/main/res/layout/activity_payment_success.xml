<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/success_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_success"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/congratulations_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/subscription_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Splitify Premium!"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/benefits_unlocked_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits Unlocked:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/benefits_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benefits will be displayed here"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Divider Line -->
        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/thank_you_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoy an ad-free experience, priority support, and much more throughout the year. Thank you for choosing to elevate your Splitify experience!"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#333333"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OK"
            app:cornerRadius="100dp"
            app:strokeColor="#FEBB1B"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"
            android:layout_marginTop="32dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>