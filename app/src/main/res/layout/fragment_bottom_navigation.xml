<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Home Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home Navigation"
            android:background="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/labelHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Groups Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/navGroups"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_groups"
            android:contentDescription="Groups Navigation"
            android:background="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/labelGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Contacts Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/navContacts"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_contacts"
            android:contentDescription="Contacts Navigation"
            android:background="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/labelContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Account Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/navAccount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_account"
            android:contentDescription="Account Navigation"
            android:background="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/labelAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>