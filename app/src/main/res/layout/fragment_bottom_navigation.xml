<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Home Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home Navigation" />

        <TextView
            android:id="@+id/labelHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Groups Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/navGroups"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_groups"
            android:contentDescription="Groups Navigation" />

        <TextView
            android:id="@+id/labelGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textSize="10sp"
            android:textColor="#B0B0B0"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Transactions Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/navTransactions"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_transactions"
            android:contentDescription="Transactions Navigation"
            android:backgroundTint="#F9A825"/>

        <TextView
            android:id="@+id/labelTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Contacts Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/navContacts"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_contacts"
            android:contentDescription="Contacts Navigation" />

        <TextView
            android:id="@+id/labelContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textSize="10sp"
            android:textColor="#B0B0B0"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Account Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/navAccount"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_account"
            android:onClick="logOutUser"
            android:contentDescription="Account Navigation" />

        <TextView
            android:id="@+id/labelAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="10sp"
            android:textColor="#B0B0B0"
            android:layout_marginTop="2dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>