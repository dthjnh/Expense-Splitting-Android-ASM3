<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_close"
        android:contentDescription="Close"
        android:padding="4dp" />

    <!-- Success Icon -->
    <ImageView
        android:layout_width="73dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/ic_success" />

    <!-- Withdraw Amount -->
    <TextView
        android:id="@+id/withdraw_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="$2,500.00"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- Withdraw To -->
    <TextView
        android:id="@+id/withdraw_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="You withdraw to **** 5567"
        android:textColor="#616161"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="VISA"
        android:textColor="#616161"
        android:textSize="14sp" />

    <!-- Receipt Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You withdraw"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_withdraw_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2,500.00"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Card Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**** 5567"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Card Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISA"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 20, 2023 - 09:41 AM"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Transaction ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction ID"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201220230941"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#80CCCCCC" />

        <!-- Notes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receipt_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Withdraw to VISA Account."
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_receipt_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#FFFFFF"
            android:text="Download Receipt"
            android:textAllCaps="false"
            app:cornerRadius="100dp"
            app:strokeColor="#FEBB1B"
            app:strokeWidth="1dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/share_receipt_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#FEBB1B"
            android:text="Share Receipt"
            app:cornerRadius="100dp"
            app:strokeColor="#FEBB1B"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>