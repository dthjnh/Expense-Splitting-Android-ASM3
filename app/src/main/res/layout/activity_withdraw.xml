<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        android:onClick="backToUserActivity"
        android:contentDescription="Back" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Amount to Withdraw"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Amount Display -->
    <EditText
        android:id="@+id/withdraw_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginTop="48dp"
        android:hint="$100"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000" />

    <!-- Available Balance -->
    <TextView
        android:id="@+id/current_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Available balance: $9,567.50"
        android:textSize="14sp"
        android:textColor="#000000" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/select_payment_method_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="@color/yellow"
        android:text="Continue"
        app:cornerRadius="100dp"
        app:strokeColor="#FEBB1B"
        app:strokeWidth="1dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>