<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Label for Group Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/urbanist"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Group Title -->
        <TextView
            android:id="@+id/groupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip to Japan 🇯🇵"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_medium"
            android:layout_marginBottom="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Label for Group Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Group Description -->
        <TextView
            android:id="@+id/groupDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Vacationing with college friends in Japan."
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/urbanist_medium"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Label for Currency -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currency"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/urbanist"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Group Currency -->
        <TextView
            android:id="@+id/groupCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/urbanist_medium"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Label for Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Group Category -->
        <TextView
            android:id="@+id/groupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip ✈️"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_medium"
            android:layout_marginBottom="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginVertical="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Group Members"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/addParticipantButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:contentDescription="Add Participant"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- RecyclerView for Participants -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/participantsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:scrollbars="vertical" />

    </LinearLayout>
</ScrollView>
