<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_close"
        android:contentDescription="Close"
        android:padding="4dp" />

    <!-- Success Icon -->
    <ImageView
        android:layout_width="73dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/ic_success" />

    <!-- Payment Amount -->
    <TextView
        android:id="@+id/amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="$365.50"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- Paid To -->
    <TextView
        android:id="@+id/recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Paid to Alfonzo Schuessler"
        android:textColor="#616161"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/request_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="alfonzo.schuessler@gmail.com"
        android:textColor="#616161"
        android:textSize="14sp" />

    <!-- Receipt Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Each Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You have paid"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amount_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$365.50"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Repeat this pattern for all fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipient_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alfonzo Schuessler"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recipient_email_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alfonzo.schuessler@gmail.com"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 20, 2023 - 09:41 AM"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction ID"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/transaction_id_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201220230941"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#80CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Notes"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/note_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner Delights Group Payments."
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:background="#4DCCCCCC" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/download_receipt_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/urbanist_bold"
            android:text="Download Receipt"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            app:strokeColor="#FEBB1B"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/share_receipt_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:backgroundTint="#FEBB1B"
            android:fontFamily="@font/urbanist_bold"
            android:text="Share Receipt"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            app:strokeColor="#FEBB1B"
            app:strokeWidth="1dp" />
    </LinearLayout>

</LinearLayout>