<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Activity Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="#F9A825"
            android:textSize="14sp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- No Transactions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/noTransactionsIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_no_transactions"
            android:contentDescription="No Transactions Icon" />

        <TextView
            android:id="@+id/noTransactionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Transactions"
            android:textColor="#808080"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/noTransactionsSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You haven't made any transactions."
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>